<h1>New Recipes</h1>

<%= form_for :recipe, url: recipes_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :instructions %><br>
    <%= f.text_area :instructions %>
  </p>

  <p>
    <%= f.label :servings %><br>
    <%= f.text_field :servings %>
  </p>

  <div class="field">
    <%= f.label :courses %>
    <%= f.select :course_ids, Course.all.collect {|x| [x.name, x.id]}, {}, :multiple => true %>
  </div>


  <p>
    <%= f.submit %>
  </p>
<% end %>
